<h1>Users</h1>

<div>
  <% @users.each do |user| %>
    <div class="panel panel-default">
      <div class="panel-heading"><h3>User</h3></div>
        <div class ="panel-body">
          <h2><%= user.name %></h2>
          <p><%= user.bio %></p>
          <h4>Followers: <%= user.followers.count %>, Following: <%= user.following.count %> </h4>
          <h4>Comments</h4>
          <% user.comments.each do |comment| %>
            <p><%= comment.body %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
